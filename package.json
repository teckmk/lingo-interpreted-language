{
  "name": "my-lang",
  "version": "1.1.0",
  "description": "An interpretor combining the best of popular programming languages",
  "main": "./bin/index.js",
  "scripts": {
    "lexer": "node ./dist/lexer.js",
    "prepare": "husky install",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --coverage",
    "lint": "eslint .  --ignore-path .eslintignore",
    "lint:fix": "eslint . --fix --ignore-path .eslintignore",
    "format": "prettier --ignore-path .eslintignore \"src/**/*.ts\"",
    "format:fix": "prettier --ignore-path .eslintignore \"src/**/*.ts\"",
    "compiler": "node ./bin"
  },
  "keywords": [
    "cowlang",
    "programming language",
    "interpretor"
  ],
  "author": "Abdullah Yasir",
  "repository": {
    "url": "https://github.com/Abdullah-yasir/lingo-programming-language"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "eslint": "^8.41.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.2.5",
    "typescript": "^4.9.5"
  },
  "bin": {
    "cowlang": "./bin/index.js"
  },
  "dependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "tsx": "^4.19.2"
  }
}
